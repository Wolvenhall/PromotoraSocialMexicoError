<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_hr_contract_form_inherit" model="ir.ui.view">
        <field name="name">view.hr.contract.form.inherit</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='information']" position="after">
                <page string="Datos de Nomina">
                    <form string="Nomina">
                        <header>
                            <button string="Generar Calculos" name="calculo_sdi" type="object" class="oe_highlight" />
                        </header>
                        <group>
                            <group string="Datos de entrada">
                                <field name="fecha_antiguedad"/>
                                <field name="fecha_antiguedad_imss"/>
                                <field name="tabla_nomina"/>
                            </group>
                            <group string="Ingresos">
                                <field name="ingreso_anual"/>
                                <field name="salario_diario"/>
                                <field name="ingreso_variable_mensual"/>
                            </group>
                        </group>
                        <group>
                            <group string="Bonos Bimestre">
                                <field name="dias_bimestre"/>
                                <field name="primer_mes_bimestre"/>
                                <field name="segundo_mes_bimestre"/>
                                <field name="dias"/>
                            </group>
                            <group string="SDI">
                                <field name="antiguedad"/>
                                <field name="dias_de_vacaciones"/>
                                <field name="aguinaldo"/>
                                <field name="prima_vacacional"/>
                                <field name="despensa_en_efectivo"/>
                                <field name="sdi"/>
                                <field name="tope_salario"/>
                                <field name="tope_exento"/>
                                <field name="exedente"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="fecha_ultima_actualizacion"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </form>
                </page>
            </xpath>
            <xpath expr="//page[@name='information']" position="after">
                <page string="Baja" attrs ="{'invisible':[('state','!=', 'expired')]}">
                    <form string="Salida">
                        <group>
                            <group>
                                <field name="departure_reason"/>
                                <field name="departure_description"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </form>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
