<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Tree view-->
    <record id="solicitud_amortizacion_tree_view" model="ir.ui.view">
        <field name="name">solicitud.amortizacion.tree</field>
        <field name="model">inversion.credito.amortizacion</field>
        <field name="arch" type="xml">
            <tree string="Solicitud de disposicion">
                <field name="credito_id"/>
                <field name="disposicion"/>
                <field name="fecha_de_pago"/>
                <field name="ministraciones"/>
            </tree>
        </field>
    </record>

    <record id="credito_amortizacion_form_view" model="ir.ui.view">
        <field name="name">solicitud.amortizacion.form</field>
        <field name="model">inversion.credito.amortizacion</field>
        <field name="arch" type="xml">
            <form string="amortizacion">
                <sheet>
                    <group>
                        <h1>
                            <field name="credito_id" placeholder="Línea de Crédito"/>
                        </h1>
                    </group>
                    <group>
                        <group>
                            <field name="fecha_de_pago"/>
                        </group>
                        <group>
                            <field name="ministraciones"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!--Action asociada menu-->
    <record id="action_solicitud_amortizacion" model="ir.actions.act_window">
        <field name="name">Solicitud de Disposición</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">inversion.credito.amortizacion</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer solicitud de disposición
            </p>
        </field>
    </record>

    <!--    <menuitem-->
    <!--            id="inversiones_contro_de_creditos"-->
    <!--            name="Control de Créditos"-->
    <!--            parent="inversiones_root"-->
    <!--            action="action_credito_amortizacion"-->
    <!--    />-->

    <menuitem
            id="solicitud_amortizacion"
            name="Solicitud de Disposición"
            parent="inversiones_contro_de_creditos"
            action="action_solicitud_amortizacion"
    />
</odoo>
