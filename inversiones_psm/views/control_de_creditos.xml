<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Tree view-->
    <record id="control_de_creditos_tree_view" model="ir.ui.view">
        <field name="name">control.credito.tree</field>
        <field name="model">inversion.control.credito</field>
        <field name="arch" type="xml">
            <tree string="Beneficiario">
                <field name="beneficiario"/>
            </tree>
        </field>
    </record>

    <!--Form view-->
    <record id="control_de_creditos_form_view" model="ir.ui.view">
        <field name="name">control.credito.form</field>
        <field name="model">inversion.control.credito</field>
        <field name="arch" type="xml">
            <form string="Beneficiarios">
                <sheet>
                    <div class="oe_button_box">
                        <button name="muestra_acciones" class="oe_stat_button" icon="fa-line-chart" type="object">
                            <field name="conteo_acciones" widget="statinfo"/>
                        </button>
                        <button name="muestra_fondos" class="oe_stat_button" icon="fa-area-chart" type="object">
                            <field name="conteo_fondos" widget="statinfo"/>
                        </button>
                        <button name="muestra_creditos" class="oe_stat_button" icon="fa-area-chart" type="object">
                            <field name="conteo_lineas_credito" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <h3>
                                <field name="beneficiario" placeholder="Beneficiario"/>
                            </h3>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!--Action asociada menu-->
    <record id="action_control_de_creditos" model="ir.actions.act_window">
        <field name="name">Control de Créditos</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">inversion.control.credito</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer registro de Control de Créditos
            </p>
        </field>
    </record>

    <menuitem
            id="inversiones_contro_de_creditos"
            name="Control de Créditos"
            parent="inversiones_root"
    />

    <menuitem
            id="inversiones_creditos"
            name="Créditos"
            parent="inversiones_contro_de_creditos"
            action="action_control_de_creditos"
    />

</odoo>
