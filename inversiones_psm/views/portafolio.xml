<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Tree view-->
    <record id="inversion_portafolio_tree_view" model="ir.ui.view">
        <field name="name">inversion.portafolio.tree</field>
        <field name="model">inversion.portafolio</field>
        <field name="arch" type="xml">
            <tree string="Beneficiario">
                <field name="beneficiario"/>
                <field name="monto_invertido_acciones"/>
                <field name="acciones_suscritas_psm"/>
                <field name="porcentaje_de_participacion"/>
            </tree>
        </field>
    </record>

    <!--Form view-->
    <record id="inversion_portafolio_form_view" model="ir.ui.view">
        <field name="name">inversion.portafolio.form</field>
        <field name="model">inversion.portafolio</field>
        <field name="arch" type="xml">
            <form string="Beneficiarios">
                <sheet>
                    <div class="oe_button_box">
                        <button name="muestra_acciones" class="oe_stat_button" icon="fa-line-chart" type="object" style="color: #424282;">
                            <field name="conteo_acciones" widget="statinfo"/>
                        </button>
                        <button name="muestra_fondos" class="oe_stat_button" icon="fa-area-chart" type="object" style="color: #154a20;">
                            <field name="conteo_fondos" widget="statinfo"/>
                        </button>
                        <button name="muestra_creditos" class="oe_stat_button" icon="fa-credit-card" type="object" style="color: #480b45;">
                            <field name="conteo_lineas_credito" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <h1>
                                <field name="beneficiario" placeholder="Beneficiario"/>
                            </h1>
                        </group>
                    </group>
                    <group col="3">
                        <group col="1">
                            <group>
                                <h5 style="background: #edf8ff; padding: 3px; color: #424282; border-radius: 4px;">
                                    <i class="fa fa-line-chart" style="margin-right: 10px; font-weight: 450;"/> ACCIONES
                                </h5>
                            </group>
                            <group>
                                <field name="monto_invertido_acciones"/>
                            </group>
                            <group>
                                <field name="acciones_suscritas_psm"/>
                            </group>
                            <group>
                                <field name="porcentaje_de_participacion"/>
                            </group>
                        </group>
                        <group col="1">
                            <group>
                                <h5 style="background: #eaffe3; padding: 3px; color: #154a20; border-radius: 4px;">
                                    <i class="fa fa-area-chart" style="margin-right: 10px; font-weight: 450;"/> FONDOS
                                </h5>
                            </group>
                            <group>
                                <field name="monto_invertido_acciones"/>
                            </group>
                            <group>
                                <field name="porcentaje_de_participacion"/>
                            </group>
                        </group>
                        <group col="1">
                            <group>
                                <div>
                                    <h5 style="background: #ffe9f5; padding: 3px; color: #480b45; border-radius: 4px;">
                                        <i class="fa fa-credit-card" style="margin-right: 10px; font-weight: 450;"/> CREDITOS
                                    </h5>
                                </div>
                            </group>

                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!--Action asociada menu-->
    <record id="action_inversion_portafolio" model="ir.actions.act_window">
        <field name="name">Portafolio</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">inversion.portafolio</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer registro del Portafolio
            </p>
        </field>
    </record>

    <menuitem
            id="inversiones_root"
            name="Inversiones"
            web_icon="inversiones_psm,static/description/icon.png"
    />

    <menuitem
            id="inversion_portafolio"
            name="Portafolio"
            parent="inversiones_root"
            action="action_inversion_portafolio"
            sequence="0"
    />

</odoo>
