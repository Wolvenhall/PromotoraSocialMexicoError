            </xpath>
            <xpath expr="//group[@name='group_separador_2']" position="before">
                <group name="group_separador_1">
                    <h4 style="background: #f4f4f4; border-radius: 5px; padding: 3px;"/>
                </group>
                <group>
                    <group>
                        <field name="solicitante" attrs="{'invisible': [('type', 'in', ('out_invoice', 'out_refund', 'out_receipt'))]}"/>
                        <field name="direccion" attrs="{'invisible': [('type', 'in', ('out_invoice', 'out_refund', 'out_receipt'))]}"/>
                        <field name="departamento" attrs="{'invisible': [('type', 'in', ('out_invoice', 'out_refund', 'out_receipt'))]}"/>
