<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">view.account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_info']" position="after">
                <page string="InformaciÃ³n historica">
                    <form>
                        <group>
                            <group>
                                <field name="tipo_de_cambio"/>
                                <field name="forma_de_pago"/>
                                <field name="metodo_de_pago"/>
                                <field name="partida_presupuestal"/>
                                <field name="ejercicio_presupuestal"/>
                            </group>
                            <group>
                                <field name="numero_de_cheque"/>
                                <field name="cheque_entregado"/>
                                <field name="poliza_entregada"/>
                                <field name="entrega_de_poliza"/>
                                <field name="numero_de_recibo"/>
                                <field name="vobo_transferencias"/>
                            </group>
                        </group>
                    </form>
                </page>
            </xpath>
            <field name="invoice_vendor_bill_id" position="after">
                <field name="solicitante"/>
                <field name="direccion"/>
                <field name="departamaneto"/>
                <field name="oficina"/>
                <field name="vehiculo"/>
                <field name="sector"/>
                <field name="subsector"/>
                <field name="nombre_del_proyecto"/>
                <field name="corporativo"/>
                <field name="deal_unico"/>
            </field>
            <field name="currency_id" position="after">
                <field name="anticipo"/>
                <field name="tipo_de_comprobante"/>
                <field name="gasto"/>
                <field name="tipo_de_gasto"/>
                <field name="centro_de_costos"/>
                <field name="tipo_de_gasto"/>
                <field name="estatus_sincronizacion"/>
                <field name="fecha_sincronizacion"/>
            </field>
        </field>
    </record>
</odoo>
