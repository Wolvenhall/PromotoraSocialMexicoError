                        <field name="subsector" attrs="{'invisible': [('type', 'in', ('out_invoice', 'out_refund', 'out_receipt'))]}"/>
                        <field name="nombre_del_proyecto" attrs="{'invisible': [('type', 'in', ('out_invoice', 'out_refund', 'out_receipt'))]}"/>
                        <field name="deal_unico" attrs="{'invisible': [('type', 'in', ('out_invoice', 'out_refund', 'out_receipt'))]}"/>
                    </group>
                </group>
            </xpath>
            <field name="currency_id" position="after">
                <field name="tipo_de_cambio" attrs="{'invisible': [('type', 'in', ('out_invoice', 'out_refund', 'out_receipt'))]}"/>
            </field>
            <field name="partner_id" position="after">
                <field name="parte_relacionada" attrs="{'invisible': [('type', 'in', ('out_invoice', 'out_refund', 'out_receipt'))]}"/>
            </field>
            <field name="ref" position="after">
                <field name="tipo_de_gasto" attrs="{'invisible': [('type', 'in', ('out_invoice', 'out_refund', 'out_receipt'))]}"/>
                <field name="subtipo_de_gasto" attrs="{'invisible': [('type', 'in', ('out_invoice', 'out_refund', 'out_receipt'))]}"/>
            </field>
            <field name="narration" position="after">
                <group>
                    <h4 style="background: #f4f4f4; border-radius: 5px; padding: 3px;"/>
                </group>
                <group string="SincronizaciÃ³n Salesforce">
                    <group>
                        <field name="estado_sincronizacion" attrs="{'invisible': [('type', 'in', ('out_invoice', 'out_refund', 'out_receipt'))]}"/>
                    </group>
                    <group>
                        <field name="fecha_sincronizacion" attrs="{'invisible': [('type', 'in', ('out_invoice', 'out_refund', 'out_receipt'))]}"/>
                    </group>
                </group>
            </field>
        </field>
