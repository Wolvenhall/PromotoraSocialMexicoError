<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="action_event_distribucion" model="ir.actions.act_window">
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">action</field>
        <field name="binding_view_types">list,form</field>
        <field name="context">{}</field>
        <field name="domain" eval="False"/>
        <field name="filter" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="help">
            <![CDATA[ <p class="o_view_nocontent_smiling_face"> This is your new action ; by default, it contains a list view and a form view. </p> <p> You can start customizing these screens by clicking on the Studio icon on the top right corner (you can also customize this help message there). </p> ]]>
        </field>
        <field name="limit">80</field>
        <field name="name">Distribucion</field>
        <field name="res_model">event.distribucion</field>
        <field name="search_view_id" eval="False"/>
        <field name="target">current</field>
        <field name="type">ir.actions.act_window</field>
        <field name="usage" eval="False"/>
        <field name="view_id" eval="False"/>
        <field name="view_mode">kanban,form,tree</field>
    </record>
    <record id="default_form_view_distribucion" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <form>
                <sheet string="Distribucion">
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1"/>
                        </h1>
                    </div>
                    <group name="studio_group_09b814">
                        <group name="studio_group_09b814_left"/>
                        <group name="studio_group_09b814_right"/>
                    </group>
                </sheet>
            </form>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">event.distribucion</field>
        <field name="name">Default form view for distribucion</field>
        <field name="priority">16</field>
        <field name="type">form</field>
    </record>
    <record id="default_tree_view_distribucion" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <tree string="Distribucion">
                <field name="name" modifiers="{}"/>
            </tree>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">event.distribucion</field>
        <field name="name">Default tree view for distribucion</field>
        <field name="priority">16</field>
        <field name="type">tree</field>
    </record>
    <record id="customization_form_distribucion" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="string">Nombre de distribución</attribute>
                </xpath>
                <xpath expr="//group[@name='studio_group_09b814_left']" position="inside">
                    <field name="capacity" string="Capacidad Maxima"/>
                </xpath>
                <xpath expr="//group[@name='studio_group_09b814_right']" position="inside">
                    <field name="image" options="{'size':[0,270]}" widget="image" string="Imagen"/>
                </xpath>
            </data>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" ref="default_form_view_distribucion"/>
        <field name="key" eval="False"/>
        <field name="mode">extension</field>
        <field name="model">event.distribucion</field>
        <field name="name">Default form view for distribucion customization</field>
        <field name="priority">99</field>
        <field name="type">form</field>
    </record>
    <menuitem
            id="menu_event_distribucion"
            name="Distribución"
            parent="menu_event_catalogos"
            action="action_event_distribucion"
            sequence="26"/>
</odoo>
