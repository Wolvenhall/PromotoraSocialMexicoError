<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="event_form_view_inherit" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//form[1]/sheet[1]/div[not(@name)][1]" position="after">
                    <group name="group_titulo_datos_de_solicitud" style="text-align: center;">
                        <h4 style="background: #f4f4f4; border-radius: 15px;">DATOS DE LA SOLICITUD</h4>
                    </group>
                </xpath>
                <xpath expr="//group[@name='group_titulo_datos_de_solicitud']" position="after">
                    <group name="group_datos_de_solicitud">
                        <group name="group_datos_de_solicitud_left">
                            <field name="x_solicitante"/>
                        </group>
                        <group name="group_datos_de_solicitud_right">
                            <field name="x_fecha_de_solicitud"/>
                            <field name="x_solicitud_enviada_en"/>
                            <field name="x_solicitud_de_evento" force_save="True" attrs="{}" readonly="1"/>
                        </group>
                    </group>
                    <group name="group_titulo_datos_del_evento" style="text-align: center;">
                        <h4 style="background: #f4f4f4; border-radius: 15px;">DATOS DEL EVENTO</h4>
                    </group>
                    <group name="group_datos_del_evento_objetivos">
                        <field name="x_objetivo" />
                        <field name="x_descripcion"/>
                    </group>
                    <group name="group_datos_del_evento_host">
                        <group>
                            <field name="x_host" string="Host"/>
                            <field name="x_departamento" string="Departamento"/>
                        </group>
                        <group>
                            <field name="x_area" widget="many2many_tags" string="Área"/>
                        </group>
                    </group>
                    <group name="group_datos_del_evento">
                        <group name="group_datos_del_evento_left">
                            <field name="x_organizadores" widget="many2many_tags" string="Organizadores" domain="[['is_company','=',True]]"/>
                            <field name="x_relacion" widget="many2many_tags"/>
                            <field name="x_invitados_proyectados"/>
                        </group>
                        <group name="group_datos_del_evento_right">
                            <field name="x_quien_paga_el_evento" string="Quien paga el evento"/>
                            <field name="x_porcentaje_que_paga_psm" string="Porcentaje que paga PSM" attrs="{'invisible': [['x_quien_paga_el_evento','!=','Ambos']]}"/>
                            <field name="x_budget_proyectado" string="Budget proyectado"/>
                            <field name="x_requiere_catering" string="Requiere catering"/>
                        </group>
                    </group>
                    <group name="group_categoria_de_eventos">
                        <group>
                            <field name="x_tipo_de_evento" string="Tipo de evento"/>
                            <field name="x_colaboradores_adicionales" attrs="{'invisible': [['x_tipo_de_evento','!=','abierto']]}"/>
                        </group>
                        <group>
                            <field name="x_categoria_de_evento" widget="many2many_tags"/>
                            <field name="x_audiencia" widget="many2many_tags"/>
                        </group>
                    </group>
                    <group style="text-align: center;">
                        <h4 style="background: #f4f4f4; border-radius: 15px;">HORARIOS</h4>
                    </group>
                </xpath>
                <xpath expr="//group[@name='group_titulo_datos_de_solicitud']" position="before">
                    <group name="group_titulo_post_evento" style="text-align: center;" attrs="{'invisible': [['state','!=','confirm']]}">
                        <h4 style="background: #fff2f2; border-radius: 15px; padding: 2px; color: #9a1212;" >POST EVENTO</h4>
                    </group>
                    <group name="group_post_evento" style="color: #9a1212;" attrs="{'invisible': [['state','!=','confirm']]}">
                        <group name="group_post_evento_left">
                            <field name="x_incidencia"/>
                        </group>
                        <group name="group_post_evento_right">
                            <field name="x_numero_de_asistentes"/>
                            <field name="x_duracion_del_evento" force_save="True" attrs="{}" readonly="1"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/group[not(@name)][1]" position="after">
                    <group name="studio_group_Wrilf">
                        <group name="studio_group_Wrilf_left">
                            <field name="x_hora_de_registro" widget="float_time"/>
                            <field name="x_hora_inicio_del_evento" widget="float_time"/>
                        </group>
                        <group name="studio_group_Wrilf_right">
                            <field name="x_hora_fin_del_evento" widget="float_time"/>
                            <field name="x_hora_maxima_de_salida" widget="float_time"/>
                        </group>
                    </group>
                    <group style="text-align: center;">
                        <h4 style="background: #f4f4f4; border-radius: 15px;">RESPONSABLES</h4>
                    </group>
                    <group name="group_responsables_del_evento">
                        <group name="group_coordinador_left">
                           <field name="x_coordinador"/>
                        </group>
                        <group name="group_brigadista_left">
                            <field name="x_brigadista"/>
                        </group>
                    </group>
                    <group style="text-align: center;">
                        <h4 style="background: #f4f4f4; border-radius: 15px;">MONTAJE Y LOGISTICA</h4>
                    </group>
                    <group name="studio_group_0efW2">
                        <group name="studio_group_0efW2_left" string="Montaje de mobiliario">
                            <field name="x_distribucion"/>
                            <field name="x_especificacion_de_distribucion" string="Especificación"/>
                        </group>
                        <group name="studio_group_0efW2_right" string="Maestra de ceremonias">
                            <field name="x_servicio_de_ceremonias" string="Servicio"/>
                            <field name="x_especificacion_de_ceremonia" string="Especificación"/>
                        </group>
                    </group>
                    <group name="studio_group_Qrz0a">
                        <group name="studio_group_Qrz0a_left" string="Audio visual">
                            <field name="x_audio_visual" widget="many2many_tags" string="Audio visual"/>
                            <field name="x_especificacion_audio_visual" string="Especificación"/>
                        </group>
                        <group name="studio_group_Qrz0a_right" string="Equipo extra">
                            <field name="x_equipo_extra" widget="many2many_tags" string="Equipo extra"/>
                            <field name="x_especificacion_equipo_extra" string="Especificación"/>
                        </group>
                    </group>
                    <group name="studio_group_V5Hrc">
                        <group name="studio_group_V5Hrc_left" string="Fotografía">
                            <field name="x_servicio_fotografia" string="Servicio"/>
                            <field name="x_especificacion_fotografia" string="Especificación"/>
                        </group>
                        <group name="studio_group_V5Hrc_right" string="Video">
                            <field name="x_servicio_video" string="Servicio"/>
                            <field name="x_especificacion_video" string="Especificación"/>
                        </group>
                    </group>
                    <group name="studio_group_Bx9h9">
                        <group name="studio_group_Bx9h9_left" string="Diseño">
                            <field name="x_diseno" widget="many2many_tags"/>
                            <field name="x_especificacion_diseno" string="Especificación"/>
                        </group>
                        <group name="studio_group_Bx9h9_right" string="Articulos Promocionales">
                            <field name="x_articulos" widget="many2many_tags" string="Articulos"/>
                            <field name="x_especificacion_articulos" string="Especificación"/>
                        </group>
                    </group>
                    <group name="studio_group_lyySZ">
                        <group name="studio_group_lyySZ_left" string="Catering">
                            <field name="x_catering" widget="many2many_tags"/>
                            <field name="x_especificacion_catering" string="Especificación"/>
                        </group>
                        <group name="studio_group_gieIU_right" string="Ponentes">
                            <field name="x_ponentes" string="Ponentes" widget="many2many_tags" domain="[['is_company','!=',True]]"/>
                            <field name="x_especificacion_ponente" string="Especificación"/>
                        </group>
                    </group>
                    <group name="studio_group_gieIU">
                        <group name="studio_group_gieIU_left" string="Encargados de servicio">
                            <field name="x_encargado_de_bar" string="Encargado de Bar" domain="[['is_company','=',True]]"/>
                            <field name="x_encargado_de_cocina" string="Encargado de cocina" domain="[['is_company','=',True]]"/>
                            <field name="x_encargado_de_mesa" string="Encargado de Mesa" domain="[['is_company','=',True]]"/>
                        </group>
                        <group name="studio_group_lyySZ_right" string="Redes Sociales">
                            <field name="x_twitter" widget="url"/>
                            <field name="x_facebook" widget="url"/>
                            <field name="x_instagram" widget="url"/>
                            <field name="x_linkedin" widget="url"/>
                            <field name="x_otros" widget="url"/>
                            <field name="x_texto_descriptivo"/>
                        </group>
                    </group>
                    <group name="group_configuraciones_odoo" style="text-align: center;">
                        <h4 style="background: #fff2f2; border-radius: 15px; padding: 2px; color: #9a1212;" >CONFIGURACIONES ODOO</h4>
                    </group>
                </xpath>

                <!-- Inicio - Configuracion nueva de campos existentes -->
                <xpath expr="//field[@name='organizer_id']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                    <attribute name="force_save">True</attribute>
                    <attribute name='invisible'>1</attribute>
                    <attribute name="readonly">1</attribute>
                    <attribute name="string">Organizador</attribute>
                </xpath>
<!--                <xpath expr="//field[@name='seats_min']" position="attributes">-->
<!--                    <attribute name="attrs">{}</attribute>-->
<!--                    <attribute name="force_save">True</attribute>-->
<!--                    <attribute name='invisible'>1</attribute>-->
<!--                    <attribute name="readonly">1</attribute>-->
<!--                </xpath>-->
                <xpath expr="//field[@name='auto_confirm']" position="attributes">
                    <attribute name='invisible'>1</attribute>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="replace"/>
                <xpath expr="//field[@name='x_solicitante']" position="after">
                    <field name="user_id" readonly="1" string="Creador del evento"/>
                </xpath>
                <xpath expr="//field[@name='address_id']" position="replace"/>
                <xpath expr="//field[@name='x_area']" position="before">
                    <field name="address_id"/>
                </xpath>
                <xpath expr="//field[@name='event_type_id']" position="replace"/>
                <xpath expr="//field[@name='x_tipo_de_evento']" position="before">
                    <field name="event_type_id"/>
                </xpath>
                <xpath expr="//field[@name='event_type_id']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                    <attribute name="string">Categoria Odoo</attribute>
                </xpath>

<!--                <xpath expr="//field[@name='date_begin']" position="replace"/>-->
<!--                <xpath expr="//field[@name='seats_max']" position="after">-->
<!--                    <field name="date_begin" widget="daterange" nolabel="1" class="oe_inline" options="{'related_end_date': 'date_end'}"/>-->
<!--                </xpath>-->

<!--                <xpath expr="//field[@name='date_begin']" position="attributes">-->
<!--                    <attribute name="attrs">{}</attribute>-->
<!--                    <attribute name="string">Fecha de inicio</attribute>-->
<!--                </xpath>-->

<!--                <xpath expr="//field[@name='date_end']" position="replace"/>-->
<!--                <xpath expr="//field[@name='date_begin']" position="after">-->
<!--                    <field name="date_end" widget="daterange" nolabel="1" class="oe_inline" options="{'related_start_date': 'date_begin'}"/>-->
<!--                </xpath>-->

<!--                <xpath expr="//field[@name='date_end']" position="attributes">-->
<!--                    <attribute name="attrs">{}</attribute>-->
<!--                    <attribute name="string">Fecha de fin</attribute>-->
<!--                </xpath>-->

            </data>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="key" eval="False"/>
        <field name="mode">extension</field>
        <field name="model">event.event</field>
        <field name="name">event.event.form customization</field>
        <field name="priority">99</field>
        <field name="type">form</field>
    </record>

</odoo>
