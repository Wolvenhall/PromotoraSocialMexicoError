<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="action_event_catering" model="ir.actions.act_window">
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">action</field>
        <field name="binding_view_types">list,form</field>
        <field name="context">{}</field>
        <field name="domain" eval="False"/>
        <field name="filter" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="help">
            <![CDATA[ <p class="o_view_nocontent_smiling_face"> This is your new action ; by default, it contains a list view and a form view. </p> <p> You can start customizing these screens by clicking on the Studio icon on the top right corner (you can also customize this help message there). </p> ]]>
        </field>
        <field name="limit">80</field>
        <field name="name">Catering</field>
        <field name="res_model">event.catering</field>
        <field name="search_view_id" eval="False"/>
        <field name="target">current</field>
        <field name="type">ir.actions.act_window</field>
        <field name="usage" eval="False"/>
        <field name="view_id" eval="False"/>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="default_form_view_catering" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <form>
                <sheet string="Catering">
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1"/>
                        </h1>
                    </div>
                    <group name="studio_group_3b2383">
                        <group name="studio_group_3b2383_left"/>
                        <group name="studio_group_3b2383_right"/>
                    </group>
                </sheet>
            </form>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">event.catering</field>
        <field name="name">Default form view for catering</field>
        <field name="priority">16</field>
        <field name="type">form</field>
    </record>
    <record id="default_tree_view_catering" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <tree string="Catering">
                <field name="name" modifiers="{}"/>
            </tree>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [ref('event.group_event_manager'), ref('event.group_event_user')])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">event.catering</field>
        <field name="name">Default tree view for catering</field>
        <field name="priority">16</field>
        <field name="type">tree</field>
    </record>
    <record id="customization_form_catering" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//group[@name='studio_group_3b2383_left']" position="inside">
                    <field name="product">
                        <tree string="Product Variants" multi_edit="1" duplicate="false">
                            <field name="barcode" optional="hide" readonly="1"/>
                            <field name="name" readonly="1"/>
                            <!--                            <field name="x_studio_etiqueta_catering" widget="many2many_tags"/>-->
                            <field name="product_template_attribute_value_ids" widget="many2many_tags" groups="product.group_product_variant" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company" optional="hide" readonly="1"/>
                            <field name="categ_id" optional="hide"/>
                            <field name="type" optional="hide" readonly="1"/>
                            <field name="price" invisible="not context.get('pricelist',False)"/>
                            <field name="uom_id" options="{'no_open': True, 'no_create': True}" groups="uom.group_uom" optional="show" readonly="1"/>
                            <field name="product_tmpl_id" invisible="1" readonly="1"/>
                            <field name="active" invisible="1"/>
                        </tree>
                    </field>
                </xpath>
            </data>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" ref="default_form_view_catering"/>
        <field name="key" eval="False"/>
        <field name="mode">extension</field>
        <field name="model">event.catering</field>
        <field name="name">Default form view for catering customization</field>
        <field name="priority">99</field>
        <field name="type">form</field>
    </record>
    <menuitem
            id="menu_event_catering"
            name="Catering"
            parent="menu_event_catalogos"
            action="action_event_catering"
            sequence="24"/>
</odoo>
